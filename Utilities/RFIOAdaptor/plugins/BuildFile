<library file=RFIOStorageMaker.cc name=UtilitiesRFIOAdaptorPlugin>
  <use name=Utilities/StorageFactory>
  <use name=Utilities/RFIOAdaptor>
  <use name=FWCore/ServiceRegistry>
  <use name=FWCore/Catalog>
  <use name=FWCore/Utilities>

  ##### ***** ##### ***** IMPORTANT NOTE! ***** ##### ***** #####
  # _NOT_ linking against castor is deliberate here, we want just
  # the headers for the stager API (RFIO API is entirely copied
  # into this package).  The actual dependency will come in via
  # RFIOCastorPlugin _IFF_ castor is used at run time.  Stager
  # calls are guaranteed to be made only on file in castor store.
  ##### ***** ##### ***** IMPORTANT NOTE! ***** ##### ***** #####
  <flags CPPFLAGS="-I$(CASTOR_BASE)/include/shift -I$(CASTOR_BASE)/include">

  <flags NO_LIB_CHECKING=yes>
  <flags EDM_PLUGIN=1>
  <flags cppflags="-D_FILE_OFFSET_BITS=64">
</library>

<library file=RFIOCastorPlugin.cc name=RFIOCastorPlugin>
  <use name=Utilities/RFIOAdaptor>
  <use name=castor>
  <flags EDM_PLUGIN=1>
</library>

<library file=RFIODPMPlugin.cc name=RFIODPMPlugin>
  <use name=Utilities/RFIOAdaptor>
  <use name=dpm>
  <flags EDM_PLUGIN=1>
  <flags cppflags="-D_FILE_OFFSET_BITS=64">
</library>
